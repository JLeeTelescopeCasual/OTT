<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="spaceship_view_form">
            <field name="name">space_mission.spaceship.form</field>
            <field name="model">spaceship</field>
            <field name="arch" type="xml">
                <form string="Spaceship Form">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="active"/>
                                <field name="number_of_passengers"/>
                            </group>
                            <group>
                                <field name="length"/>
                                <field name="diameter"/>
                                <field name="volume" force_save="1"/>
                                <field name="fuel_type"/>
                            </group>
                            <notebook>
                                <page string="Description">
                                    <field name="description"/>"
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model='ir.ui.view' id='spaceship_view_list'>
            <field name="name">space_mission.spaceship.list</field>
            <field name="model">spaceship</field>
            <field name="arch" type="xml">
                <tree string="Spaceship List">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="number_of_passengers"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="spaceship_view_search">
            <field name="name">space_mission.spaceship.search</field>
            <field name="model">spaceship</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="description"/>
                </search>
            </field>
        </record>
    </data>
</odoo>