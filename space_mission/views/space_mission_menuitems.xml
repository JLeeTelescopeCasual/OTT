        <record model="ir.actions.act_window" id="spaceship_list_action">
            <field name="name">Spaceships</field>
            <field name="res_model">spaceship</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create the first spaceship
                </p>
            </field>
        </record>
        <menuitem id="menu_space_mission"
                  name="Space Mission"
                  sequence="1"/>
        <menuitem id="menu_space_mission_sub"
                  name="Spaceships"
                  parent="menu_space_mission"
                  sequence="2"/>
        <menuitem id="menu_space_mission_spaceships"
                  name="Spaceships"
                  parent="menu_space_mission_sub"
                  sequence="3"
                  action="spaceship_list_action"/>
    </data>
